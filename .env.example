# PostgreSQL Database Configuration
POSTGRES_DB=kawait_prod
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me

# Database URL para producci√≥n (Docker)
# Formato: postgres://usuario:password@host:puerto/database
DATABASE_URL=postgres://postgres:change_me@db:5432/kawait_prod

# Node Environment
NODE_ENV=production

# Frontend origin (used by backend CORS)
# Para Docker: http://localhost,http://localhost:3000
# Para VPS con dominio: https://tudominio.com,http://tudominio.com
CORS_ORIGINS=http://localhost,http://localhost:3000

# Frontend API URL (used by frontend to connect to backend)
# Para Docker local: /api
# Para VPS con dominio: https://api.tudominio.com
VITE_API_URL=/api
